@model IEnumerable<Contact>

<nav class="navigation-bar row">
    <h2 class="text-white col-9 ml-3 p-0 m-0">Contactos</h2>
    <a class="btn-claro my-0" asp-action="newContact">Añadir contacto</a>
    <a class="btn-claro my-0" asp-action="ListChat">Regresar</a>
</nav>
<div class="row maxheight">
    <div class="col-6 list-contacts">
        <h2 class="row mt-5 text-center titulo-lista">Lista de contactos que puede añadir</h2>
        @foreach (var contact in Model)
        {
            <div class="container row request">
                <h3 class="col-9 item">@contact.Username</h3>
                <a class="btn-principal marginx padding-btn col-2" href="@Url.Action("AñadirAlGrupo", new { IdNuevo = contact.ID})">Añadir</a>
            </div>
        }
        @if (Model.Count() == 0)
        {
            <div class="container row request">
                <h3 class="col-9 item">No tiene contactos agregados</h3>
            </div>
        }

    </div>
    <div class="col-6 list-contacts">
        <a class="btn-principal ancho-mitad" asp-action="Crear">Crear el grupo</a>
    </div>
</div>

@if (TempData["testmsg"] != null)
{
    <script type="text/javascript">
       alert("@TempData["testmsg"]");
    </script>
}